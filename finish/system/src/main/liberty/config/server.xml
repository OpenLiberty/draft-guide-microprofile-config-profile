<server description="system service">

    <featureManager>
        <feature>restfulWS-3.1</feature>
        <feature>jsonb-3.0</feature>
        <feature>jsonp-2.1</feature>
        <feature>cdi-4.0</feature>
        <feature>mpConfig-3.0</feature>
        <feature>ssl-1.0</feature>
    </featureManager>

    <!-- tag::defaultConfig[] -->
    <!-- tag::port[] -->
    <variable name="http.port" defaultValue="9080"/>
    <!-- end::port[] -->
    <variable name="https.port" defaultValue="9443"/>
    <!-- tag::credentials[] -->
    <!-- tag::username[] -->
    <variable name="default.username" defaultValue="admin"/>
    <!-- end::username[] -->
    <!-- tag::password[] -->
    <variable name="default.password" defaultValue="adminpwd"/>
    <!-- end::password[] -->
    <!-- end::credentials[] -->
    <!-- tag::context.root[] -->
    <variable name="context.root" defaultValue="system"/>
    <!-- end::context.root[] -->
    <!-- end::defaultConfig[] -->

    <!-- tag::httpEndpoint[] -->
    <httpEndpoint id="defaultHttpEndpoint" host="*"
        httpPort="${http.port}" 
        httpsPort="${https.port}"/>
    <!-- end::httpEndpoint[] -->

    <!-- tag::webApplication[] -->
    <webApplication location="guide-microprofile-config-profile-system.war"
        contextRoot="${context.root}"/>
    <!-- end::webApplication[] -->

    <keyStore id="guideKeyStore"
              password="secret"
              location="${server.config.dir}/resources/security/key.p12"/>

    <basicRegistry id="basic" realm="BasicRegistry">
    	<!-- tag::user[] -->
        <user name="${default.username}" password="${default.password}"/>
        <!-- end::user[] -->
    </basicRegistry>

    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />

</server>